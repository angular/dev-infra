load("//tools:defaults.bzl", "pkg_npm", "ts_library")
load("//tools:esbuild.bzl", "esbuild")

ts_library(
    name = "lib",
    srcs = [
        "cli.ts",
    ],
    visibility = ["//ng-dev:__subpackages__"],
    deps = [
        "//ng-dev/caretaker",
        "//ng-dev/commit-message",
        "//ng-dev/ngbot",
        "//ng-dev/pr",
        "//ng-dev/release",
        "//ng-dev/ts-circular-dependencies",
        "//ng-dev/utils",
        "//ng-dev/format",
        "//ng-dev/misc",
        "//ng-dev/pullapprove",
        "@npm//yargs",
        "@npm//@types/yargs",
    ],

)


pkg_npm(
    name = "npm_package",
    package_name = "@angular/dev-infra-private",
    visibility = ["//visibility:public"],
    build_package_json_from_template = True,
    deps = [
        ":build-worker",
        ":ng-dev",
        ":lib",
    ],
)

esbuild(
    name = "ng-dev",
    entry_point = "cli.ts",
    save_to_repo = True,
    deps = [
        ":lib",
    ],
)

esbuild(
    name = "build-worker",
    entry_point = "//ng-dev/release/build:build-worker.ts",
    save_to_repo = True,
    deps = [
        ":lib",
    ],
)
