load("//tools:defaults.bzl", "copy_to_bin", "jasmine_test", "ts_project")

copy_to_bin(
    name = "build-worker",
    srcs = [
        "build-worker.ts",
    ],
    visibility = ["//ng-dev:__pkg__"],
)

ts_project(
    name = "build",
    srcs = glob(
        [
            "**/*.ts",
        ],
        exclude = ["*.spec.ts"],
    ),
    visibility = ["//ng-dev:__subpackages__"],
    deps = [
        "//ng-dev:node_modules/@types/node",
        "//ng-dev:node_modules/@types/yargs",
        "//ng-dev/release/config",
        "//ng-dev/utils",
    ],
)

ts_project(
    name = "test_lib",
    testonly = True,
    srcs = glob([
        "*.spec.ts",
    ]),
    deps = [
        ":build",
        "//ng-dev:node_modules/@types/jasmine",
        "//ng-dev:node_modules/@types/node",
        "//ng-dev/release/config",
        "//ng-dev/utils",
    ],
)

jasmine_test(
    name = "test",
    data = [
        ":test_lib",
    ],
)
