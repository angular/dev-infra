    node_repositories = {
        "22.21.0-darwin_arm64": ("node-v22.21.0-darwin-arm64.tar.gz", "node-v22.21.0-darwin-arm64", "dbc1a17024a32827adb23b5b11ce98cefcd783145a30fe41bb2845be711e9742"),
