load("//bazel/integration:index.bzl", "integration_test")

integration_test(
    name = "test",
    srcs = glob(["**/*"]),
    commands = [
        "pnpm i ",
        "pnpm run test",
    ],
    data = [
        # Makes the chromium binaries available for the `ng test` command.
        "@rules_browsers//browsers/chromium",
    ],
    environment = {
        "CHROME_BIN": "$(CHROME-HEADLESS-SHELL)",
    },
    tags = [
        # This test relies on `yarn` so there needs to be internet access.
        "requires-network",
    ],
    tool_mappings = {
        "@pnpm//:pnpm": "pnpm",
        "@nodejs_toolchains//:resolved_toolchain": "node",
    },
    toolchains = ["@rules_browsers//browsers/chromium:toolchain_alias"],
)
