load("//tools:defaults.bzl", "jasmine_node_test", "ts_library")

ts_library(
    name = "unit_test_lib",
    testonly = True,
    srcs = glob([
        "*.spec.ts",
    ]),
    deps = [
        "//docs/markdown/guides",
        "@npm//@bazel/runfiles",
        "@npm//@types/jasmine",
        "@npm//@types/jsdom",
        "@npm//@types/node",
        "@npm//jsdom",
        "@npm//marked",
    ],
)

ts_library(
    name = "bootstrap",
    testonly = True,
    srcs = [
        "bootstrap.init.ts",
    ],
    deps = [
        "@npm//@types/node",
    ],
)

jasmine_node_test(
    name = "unit_tests",
    bootstrap = [
        ":bootstrap",
    ],
    data = [
        "//bazel/browsers/chromium:chromium-for-generation",
        "@npm//jsdom",
        "@npm//mermaid",
        "@npm//playwright-core",
    ] + glob([
        "**/*.md",
        "**/*.svg",
        "**/*.ts",
    ]),
    env = {
        "CHROME_BIN": "$(CHROMIUM)",
    },
    # JSDOM should not be bundled because it has workers and dynamic imports.
    external = [
        "jsdom",
        "playwright-core",
    ],
    specs = [":unit_test_lib"],
    tags = [
        "no-remote-exec",
    ],
    toolchains = [
        "//bazel/browsers/chromium:toolchain_alias",
    ],
)
