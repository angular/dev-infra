load("//tools:defaults.bzl", "jasmine_node_test", "ts_library")

ts_library(
    name = "unit_test_lib",
    testonly = True,
    srcs = glob([
        "**/*.spec.ts",
    ]),
    deps = [
        "//docs/pipeline/guides",
        "@npm//@bazel/runfiles",
        "@npm//@types/jasmine",
        "@npm//@types/jsdom",
        "@npm//@types/node",
        "@npm//jsdom",
    ],
)

ts_library(
    name = "bootstrap",
    testonly = True,
    srcs = [
        "bootstrap.init.ts",
    ],
    deps = [
        "@npm//@types/node",
    ],
)

jasmine_node_test(
    name = "unit_tests",
    bootstrap = [
        ":bootstrap",
    ],
    data = [
        "@npm//jsdom",
    ] + glob([
        "**/*.md",
        "**/*.svg",
        "**/*.ts",
    ]),
    # JSDOM should not be bundled because it has workers and dynamic imports.
    external = [
        "jsdom",
    ],
    specs = [":unit_test_lib"],
)
